
<div class="flash">
        <%= flash[:notice] %>
</div>
<section>
<h2 class="book-title">Books</h2>
<div class="new-title-box">
	<div class="title">
			<p class="new-title">title</p>
	</div>
	<div class="body">
			<p class="new-body">body</p>
	</div>
</div>
		<% @posts.each do |post| %>
				<div class="new-box">
					<div class="new-subbox">
						<div class="title">
								<h5 class="new-title-text"><%= post.title %></h5>
						</div>
						<div class="body">
								<p class="new-body-text"><%= post.body %></p>
						</div>
				</div>
						<div class="edit-bottom">
										<%= link_to "show", post_path(post.id),class:"show_#{post.id}" %>
										<%= link_to "Edit", edit_post_path(post.id),class:"edit_#{post.id}" %>
										<%= link_to "destroy",  post_path(post.id), method: :delete, "data-confirm" => "本当に削除しますか？",class:"destroy_#{post.id}" %>
						</div>
				</div>
		<% end %>
</section>

<h2 class="book-title">New books</h2>

<%= form_for(@post) do |post| %>
<div class="form-box clearfix">
	<p>title</p>
	<%= post.text_field :title, class:'book_title' %>
	<p>text</p>
	<%= post.text_area :body, class:"book_body" %>
</div>
	<%= post.submit 'create book', class:"book-bottom" %>

<% end %>
